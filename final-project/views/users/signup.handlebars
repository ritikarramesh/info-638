<form action="/users/signup" role="form" method="post" style="padding: 32px; width: 50%; margin: 0 auto;">
    <h1>Sign Up</h1>
    <p>Please enter credentials to create an account</p>
  <input type="hidden" name="_csrf" value="{{_csrfToken}}">
  <div class="mb-4">
    <label for="name" class="form-label">Name</label>
    <input type="text" id="name" name="name" class="form-control">
  </div>
  <div class="mb-4">
    <label for="email" class="form-label">Email</label>
    <input type="email" id="email" name="email" class="form-control">
  </div>
  <div class="mb-4">
    <label for="password" class="form-label">Password</label>
    <input type="password" id="password" name="password" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Sign Up</button>
  <a href="/users/login" class="btn btn-secondary">Already have an account? Log In</a>
</form>